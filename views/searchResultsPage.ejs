<body style="background-color: rgb(28, 36, 51);">
    <a href="http://localhost:3000/users">
        <button class="btn btn-outline-light">Back to Login</button>
    </a>
    <br>
    <center>
        <form action="/users/moviedata" method="post">

            <br><br><br><br>
            <blockquote class="blockquote">
                <h1 style="color: white;">Results Search</h1>
            </blockquote>

            <center>
                <%if(data.name.length===0 && dataJson.name.length===0){ %>
                    <h3> No data was found for the selected search data</h3>
                    <% } %>

                        <table class="table" style="width:550px;color: #fff;">
                            <thead>
                                <tr>
                                    <th scope="col">Search Results</th>
                                    <th scope="col">Movies With Same Genre</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td>
                                        <% data.name.forEach(function(x){ %>
                                            <button style="width: 150px;" name="name" value="<%=x%>" class="btn btn-outline-light">
                                                    <%=x%></button>
                                            <br>
                                            <% });%>
                                                <% dataJson.name.forEach(function(x){ %>
                                                    <button name="name" class="btn btn-outline-light" value="<%=x%>">
                                                    <%=x%></button> <br>
                                                    <% });%>

                                    </td>
                                    <td>
                                        <% sameData.name.forEach(function(x){ %>
                                            <button name="name" class="btn btn-outline-light" value="<%=x%>">
                                                <%=x%></button> <br>
                                            <% });%>
                                    </td>
                                </tr>
                            </tbody>
                        </table><br><br>
                        <!--<button class="btn btn-outline-light">Movie's Data</button>-->

        </form><br><br>

        </center>

</body>
</center>

